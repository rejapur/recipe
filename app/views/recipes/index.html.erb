<div>
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
    <% @recipes.each do |recipe| %>
    <!-- <div class="row"> -->
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to (image_tag recipe.image.url(:medium)), recipe_path(recipe.id) %>
          <div class="caption">
            <h3><%= recipe.title %></h3>
            <p><%= recipe.description %></p>
            <p><%= link_to 'Show', recipe_path(recipe.id), :class => 'btn btn-primary' %></p>
          </div>
        </div>
      </div>
    <!-- </div> -->
    <% end %>
    </div>

    <%= link_to 'New Recipe', new_recipe_path, :class => 'btn btn-default' %>
  </div>
</div>
